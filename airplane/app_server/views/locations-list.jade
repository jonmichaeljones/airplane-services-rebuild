extends layout

include _includes/sharedHTMLfunctions

block content
  #banner.page-header
    .row
      .col-lg-6
        //- buffered code method
        h1= pageHeader.title                    
          //- inline insertion/interpolation method
          small &nbsp;#{pageHeader.strapline}
  .row
    .col-xs-12.col-sm-8
      .error= message
      .row.list-group
        each climbTable in climbTables
          .col-xs-12.list-group-item
            h4 
              a(href="/climb/#{climb._id}")= climbTables.weight
              small &nbsp;
              
    .col-xs-12.col-sm-4 
      p.lead= sidebar